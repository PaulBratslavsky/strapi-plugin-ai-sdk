{
  "version": "0.6.0",
  "keywords": [
    "strapi",
    "strapi-plugin",
    "ai",
    "ai-sdk",
    "anthropic",
    "claude",
    "mcp",
    "chat"
  ],
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json",
    "./strapi-admin": {
      "types": "./dist/admin/src/index.d.ts",
      "source": "./admin/src/index.ts",
      "import": "./dist/admin/index.mjs",
      "require": "./dist/admin/index.js",
      "default": "./dist/admin/index.js"
    },
    "./strapi-server": {
      "types": "./dist/server/src/index.d.ts",
      "source": "./server/src/index.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "strapi-plugin build && npm run build:widget",
    "build:plugin": "strapi-plugin build",
    "build:widget": "vite build --config widget/vite.config.mts",
    "dev:widget": "vite build --config widget/vite.config.mts --watch",
    "prepublishOnly": "npm run build",
    "watch": "strapi-plugin watch",
    "watch:link": "strapi-plugin watch:link",
    "verify": "strapi-plugin verify",
    "test:ts:front": "run -T tsc -p admin/tsconfig.json",
    "test:ts:back": "run -T tsc -p server/tsconfig.json",
    "test:api": "npx tsx tests/ai-sdk.test.ts",
    "test:stream": "node tests/test-stream.mjs",
    "test:chat": "node tests/test-chat.mjs",
    "test:guardrails": "npx tsx tests/test-guardrails.ts",
    "test:mcp": "npx tsx tests/mcp.test.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.15",
    "@ai-sdk/react": "^3.0.41",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@strapi/design-system": "^2.0.0-rc.30",
    "@strapi/icons": "^2.0.0-rc.30",
    "ai": "^6.0.39",
    "lucide-react": "^0.575.0",
    "react-intl": "^8.1.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "three": "^0.175.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "@strapi/sdk-plugin": "^5.4.0",
    "@strapi/strapi": "^5.33.3",
    "@strapi/typescript-utils": "^5.33.3",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "prettier": "^3.8.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3",
    "styled-components": "^6.3.8",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@strapi/strapi": "^5.33.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3",
    "styled-components": "^6.3.8"
  },
  "strapi": {
    "kind": "plugin",
    "name": "ai-sdk",
    "displayName": "AI SDK",
    "description": "Strapi v5 plugin with AI chat, MCP server, TTS, and 3D avatar"
  },
  "name": "strapi-plugin-ai-sdk",
  "description": "Strapi v5 plugin with AI chat, MCP server, TTS, and 3D avatar â€” powered by Vercel AI SDK and Anthropic Claude",
  "license": "MIT",
  "author": "Paul Bratslavsky <paul.bratslavsky@strapi.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulBratslavsky/strapi-plugin-ai-sdk.git"
  },
  "homepage": "https://github.com/PaulBratslavsky/strapi-plugin-ai-sdk#readme",
  "bugs": {
    "url": "https://github.com/PaulBratslavsky/strapi-plugin-ai-sdk/issues"
  },
  "bundleDependencies": [
    "@modelcontextprotocol/sdk",
    "zod"
  ]
}
